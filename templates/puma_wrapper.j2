#!/usr/bin/env /usr/local/bin/bash

PATH=$PATH:/usr/local/bin

if
  [[ -s "/home/{{ app_user }}/.rvm/gems/{{ ruby_version }}/environment" ]]
then
  source "/home/{{ app_user }}/.rvm/gems/{{ ruby_version }}/environment"
  exec pumactl "$@"
else
  echo "ERROR: Missing RVM environment file: '/home/{{ app_user }}/.rvm/gems/{{ ruby_version }}/environment'" >&2
  exit 1
fi
